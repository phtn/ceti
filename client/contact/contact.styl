.contact-div
	height 100vh
.sign-div
	margin-top 50px	
h6.fadeInLeft
	letter-spacing 2px
	font-weight bold
	-webkit-animation-duration .3s
	span.ion-android-create
		margin-right 15px
		color #BDBDBD
		text-shadow 1px 1px 1px rgba(0,0,0, 0.5 )
		font-size 2em
hr.fadeInRight
	width 200px
	background-color rgba(0,0,0, 0.5 )
	border none
	-webkit-animation-duration .3s
	
	
#google
	-webkit-animation-duration .5s
	-webkit-animation-delay .255s
	width 200px
	margin-bottom 20px
	h5 
		font-weight bolder
		text-shadow 6px 6px 12px rgba(0,0,0, 0.6 )
		color #BDBDBD
		letter-spacing 1px
#facebook
	-webkit-animation-duration .5s
	-webkit-animation-delay .333s
	background-color #3b5998 !important
	width 200px
	h5
		font-weight bolder
		text-shadow 6px 6px 10px rgba(0,0,0, 0.6 )
		color #BDBDBD
		letter-spacing 1px

// LOGGED IN

div.chat-div
	h6
		letter-spacing 2px
		font-weight bold
		text-transform uppercase
	hr
		background-color rgba(0,0,0, 0.3 )
		border none
	p.time
		font 9px 'Roboto', sans-serif
		text-align right
	
div.chat-box
	margin 10px auto
	height 270px
	max-width 500px
	border 2px solid rgba(0,0,0, 0.15 )
	border-radius 3px
	overflow scroll
	overflow-x hidden
	padding 10px
	
	

span.signout
	margin-left 30px
	color #bdbdbd
	cursor pointer
	
span.signout:hover
	color #E53935
	text-shadow -1px -1px -1px rgba(0,0,0, 0.3 )
div.messages
	padding 10px
	text-align left
	max-width 300px
	margin-bottom 5px
	box-shadow 1px 1px 1px rgba(0,0,0, 0.3 )
	font 10px
div.left-message
	border-radius 10px 5px 5px 0px
	background: #bdbdbd;
	background -moz-linear-gradient(45deg, #bdbdbd 0%, #9e9e9e 100%)
	background -webkit-linear-gradient(45deg, #bdbdbd 0%,#9e9e9e 100%)
	background linear-gradient(45deg, #bdbdbd 0%,#9e9e9e 100%)
div.right-message
	border-radius 5px 10px 0px 5px
	background: #bdbdbd;
	background -moz-linear-gradient(45deg, #e0e0e0 0%, #bdbdbd 100%)
	background -webkit-linear-gradient(45deg, #e0e0e0 0%,#bdbdbd 100%)
	background linear-gradient(45deg, #e0e0e0 0%,#bdbdbd 100%)
	display inline-block
	clear both
div.message-input
	margin 5px auto
	padding-top 20px
	max-width 375px
	padding-bottom 0px
	font 16px
	color #222

::-webkit-input-placeholder
	letter-spacing 2px
	font-weight bold
	color #333 !important
	