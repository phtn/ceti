h3.small-heading
	margin-top -10px
	font 100 20px 'Roboto', sans-serif
	#for
		-webkit-animation-delay .5s
		-webkit-animation-duration .5s
	.business-label
		letter-spacing 3px
		font-weight bolder
		-webkit-animation-delay .6s
		-webkit-animation-duration .5s
		
.h-divider
	margin 20px auto
	text-align center
	height 1px
	max-width 375px
	width 100%
	background -webkit-linear-gradient(left, rgba(255,255,255, 0 ), #eee)

